#include <stdio.h>

int main () {
    char letraEstado;
    char codigoCarta[20];
    char nomeEstado[20];
    int populacao, pontoTuristico; 
    float area, pib;
    float densidadePopulacional, pibPerCapita;

    //carta 1
    printf ("Digite uma letra: \n");
    scanf("%s", &letraEstado);
    printf ("Insira o código da carta: \n");
    scanf("%s", &codigoCarta);
    printf ("Digite o nome do estado: \n");
    scanf ("%s", &nomeEstado);
    printf("Digite a população desse estado: \n");
    scanf("%d", &populacao);
    printf ("Digite a area em quilometros quadrados desse estado: \n");
    scanf("%f", &area);
    printf ("Qual o PIB desse estado? \n");
    scanf("%f", &pib);
    printf ("Quantos pontos turísticos há nesse estado? \n");
    scanf("%d", &pontoTuristico);

    densidadePopulacional = populacao / area;
    pibPerCapita = pib / populacao;

    printf("\nCarta 1\n");
    printf("Estado: %c\n", letraEstado); 
    printf("Código: %s\n", codigoCarta);
    printf("Nome da Cidade: %s\n", nomeEstado);
    printf("População: %d\n", populacao);
    printf("Área: %f em Km²\n", area);
    printf("PIB: %.2f bilhões de reais\n", pib);
    printf("Número de Pontos Turisticos:%d\n", pontoTuristico);
    printf("Densidade Populacional: %f hab/km²\n", densidadePopulacional);
    printf("PIB Per Capita: %f reais\n\n", pibPerCapita);


    //Carta 2
    printf ("Digite uma letra: \n");
    scanf("%s", &letraEstado);
    printf ("Insira o código da carta: \n");
    scanf("%s", &codigoCarta);
    printf ("Digite o nome do estado: \n");
    scanf ("%s", &nomeEstado);
    printf("Digite a população desse estado: \n");
    scanf("%d", &populacao);
    printf ("Digite a area em quilometros quadrados desse estado: \n");
    scanf("%f", &area);
    printf ("Qual o PIB desse estado? \n");
    scanf("%f", &pib);
    printf ("Quantos pontos turísticos há nesse estado? \n");
    scanf("%d", &pontoTuristico);

    densidadePopulacional = populacao / area;
    pibPerCapita = pib / populacao;

    printf("\nCarta 2\n");
    printf("Estado: %c\n", letraEstado); 
    printf("Código: %s\n", codigoCarta);
    printf("Nome da Cidade: %s\n", nomeEstado);
    printf("População: %d\n", populacao);
    printf("Área: %f em Km²\n", area);
    printf("PIB: %.2f bilhões de reais\n", pib);
    printf("Número de Pontos Turisticos:%d\n", pontoTuristico);
    printf("Densidade Populacional: %f hab/km²\n", densidadePopulacional);
    printf("PIB Per Capita: %f reais\n\n", pibPerCapita);
    
    return 0;
}
